<h1>Listing groups</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Synth</th>
    <th>Audio</th>
    <th>Synth instance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.id %></td>
    <td><%= group.name %></td>
    <td><%= link_to group.synth_id, synth_path(group.synth_id) %></td>
    <td><%= link_to group.audio_id, audiofile_path(group.audio_id) %></td>
    <td><%= link_to group.synth_instance_id, synthinstance_path(group.synth_instance_id) %></td>
    <td><%= link_to 'Show', group %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

